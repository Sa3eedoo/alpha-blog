<div class="container" style="max-width:500px; margin:60px auto; font-family:'Poppins',sans-serif;">

  <% if @user.errors.any? %>
    <div class="alert alert-danger" 
         style="border-radius:12px; box-shadow:0 4px 10px rgba(0,0,0,0.1); margin-bottom:20px;">
      <h4 style="font-weight:600; color:#721c24;">Please fix the following errors:</h4>
      <ul style="margin-top:10px; color:#721c24;">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card shadow-sm" 
       style="border:none; border-radius:1rem; padding:30px; background-color:white; box-shadow:0 8px 20px rgba(0,0,0,0.05);">
    
    <h2 style="text-align:center; margin-bottom:25px; font-weight:600; color:#212529;">
      Sign Up
    </h2>

    <%= form_with(model: @user, local: true) do |f| %>

      <!-- Username -->
      <div class="form-group" style="margin-bottom:20px;">
        <%= f.label :username, style: 'font-weight:500; color:#495057;' %>
        <%= f.text_field :username, class: 'form-control', 
              style: 'border-radius:8px; padding:10px 12px; border:1px solid #ced4da; font-size:1rem; margin-top:6px;' %>
      </div>

      <!-- Email -->
      <div class="form-group" style="margin-bottom:20px;">
        <%= f.label :email, style: 'font-weight:500; color:#495057;' %>
        <%= f.email_field :email, class: 'form-control', 
              style: 'border-radius:8px; padding:10px 12px; border:1px solid #ced4da; font-size:1rem; margin-top:6px;' %>
      </div>

      <!-- Password -->
      <div class="form-group" style="margin-bottom:20px;">
        <%= f.label :password, style: 'font-weight:500; color:#495057;' %>
        <%= f.password_field :password, class: 'form-control', 
              style: 'border-radius:8px; padding:10px 12px; border:1px solid #ced4da; font-size:1rem; margin-top:6px;' %>
      </div>

      <!-- Password Confirmation -->
      <div class="form-group" style="margin-bottom:25px;">
        <%= f.label :password_confirmation, "Confirm Password", style: 'font-weight:500; color:#495057;' %>
        <%= f.password_field :password_confirmation, class: 'form-control', 
              style: 'border-radius:8px; padding:10px 12px; border:1px solid #ced4da; font-size:1rem; margin-top:6px;' %>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <%= f.submit 'Create Account', 
              class: 'btn btn-primary btn-lg', 
              style: 'border-radius:50px; padding:10px 28px; font-weight:500; transition:all 0.2s ease;' %>
      </div>
    <% end %>

  </div>

  <div class="text-center" style="margin-top:30px;">
    <%= link_to 'â¬… Back to Home', root_path, 
          class: 'btn btn-outline-secondary', 
          style: 'border-radius:50px; padding:8px 20px; font-weight:500;' %>
  </div>
</div>
