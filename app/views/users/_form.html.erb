<div class="container" style="max-width:600px; margin-top:60px; font-family:'Poppins',sans-serif;">

  <div class="card shadow-sm" 
       style="border:none; border-radius:1rem; background-color:white; 
              box-shadow:0 8px 20px rgba(0,0,0,0.05); padding:30px;">

    <h2 style="text-align:center; margin-bottom:25px; font-weight:600; color:#212529;">
      <%= @user.new_record? ? "Sign Up" : "Edit Profile" %>
    </h2>

    <%= form_with(model: @user, local: true) do |f| %>
      
      <!-- Username -->
      <div class="form-group" style="margin-bottom:20px;">
        <%= f.label :username, style: 'font-weight:500; color:#495057;' %>
        <%= f.text_field :username, class: 'form-control', 
              style: 'border-radius:8px; padding:10px 12px; border:1px solid #ced4da; font-size:1rem; margin-top:6px;' %>
      </div>

      <!-- Email -->
      <div class="form-group" style="margin-bottom:20px;">
        <%= f.label :email, style: 'font-weight:500; color:#495057;' %>
        <%= f.email_field :email, class: 'form-control', 
              style: 'border-radius:8px; padding:10px 12px; border:1px solid #ced4da; font-size:1rem; margin-top:6px;' %>
      </div>

      <!-- Password -->
      <div class="form-group" style="margin-bottom:25px;">
        <%= f.label :password, style: 'font-weight:500; color:#495057;' %>
        <%= f.password_field :password, class: 'form-control', 
              style: 'border-radius:8px; padding:10px 12px; border:1px solid #ced4da; font-size:1rem; margin-top:6px;' %>
        <% if !@user.new_record? %>
          <small style="color:#6c757d;">Leave blank if you don't want to change the password</small>
        <% end %>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <%= f.submit (@user.new_record? ? 'Sign Up' : 'Update Profile'), 
              class: 'btn btn-primary btn-lg', 
              style: 'border-radius:50px; padding:10px 28px; font-weight:500; transition:all 0.2s ease;' %>
      </div>

    <% end %>

    <!-- Back Button -->
    <div class="text-center" style="margin-top:30px;">
      <%= link_to 'â¬… Back', root_path, 
            class: 'btn btn-outline-secondary', 
            style: 'border-radius:50px; padding:8px 20px; font-weight:500;' %>
    </div>

  </div>

</div>
