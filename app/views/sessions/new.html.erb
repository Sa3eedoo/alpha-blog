<div class="container" style="max-width:600px; margin-top:60px; font-family:'Poppins',sans-serif;">

  <div class="card shadow-sm" 
       style="border:none; border-radius:1rem; background-color:white; 
              box-shadow:0 8px 20px rgba(0,0,0,0.05); padding:30px;">

    <h2 style="text-align:center; margin-bottom:25px; font-weight:600; color:#212529;">
      Log In
    </h2>

    <!-- Flash Alert -->
    <% if flash[:alert] %>
      <div style="background-color:#f8d7da; color:#842029; border:1px solid #f5c2c7; 
                  border-radius:8px; padding:15px; margin-bottom:25px; text-align:center;">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with(scope: :session, url: login_path) do |form| %>

      <!-- Email -->
      <div class="form-group" style="margin-bottom:20px;">
        <%= form.label :email, style: 'font-weight:500; color:#495057;' %>
        <%= form.email_field :email, class: 'form-control', autofocus: true, required: true,
              style: 'border-radius:8px; padding:10px 12px; border:1px solid #ced4da; font-size:1rem; margin-top:6px;' %>
      </div>

      <!-- Password -->
      <div class="form-group" style="margin-bottom:25px;">
        <%= form.label :password, style: 'font-weight:500; color:#495057;' %>
        <%= form.password_field :password, class: 'form-control', required: true,
              style: 'border-radius:8px; padding:10px 12px; border:1px solid #ced4da; font-size:1rem; margin-top:6px;' %>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <%= form.submit "Log In", 
              class: 'btn btn-primary btn-lg', 
              style: 'border-radius:50px; padding:10px 28px; font-weight:500; transition:all 0.2s ease;' %>
      </div>

    <% end %>
  </div>

</div>
